<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fire_pattern">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/panelMain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_panel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Header -->
            <TextView
                android:id="@+id/tvTituloApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BuscaAnime"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#e86e36"
                android:shadowColor="#d84c3b"
                android:shadowRadius="3"
                android:gravity="center" />

            <!-- Fila de iconos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="12dp"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_orange"
                    android:src="@drawable/ic_home"
                    app:tint="@android:color/white"
                    android:contentDescription="Inicio" />

                <ImageButton
                    android:id="@+id/btnFavoritosTop"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_orange"
                    android:src="@drawable/ic_heart"
                    app:tint="@android:color/white"
                    android:contentDescription="Favoritos" />

                <ImageButton
                    android:id="@+id/btnEmisionTop"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_orange"
                    android:src="@drawable/ic_play"
                    app:tint="@android:color/white"
                    android:contentDescription="Emisión" />
            </LinearLayout>

            <!-- Botones superiores -->
            <Button
                android:id="@+id/btnCargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Cargar Animes"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_orange" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cerrar sesión"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_orange" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#3b2b20"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <!-- Lista -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="@drawable/bg_panel"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

        <!-- FABs inferiores -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="Buscar anime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_search_24"
            app:tint="@android:color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddAnime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Añadir anime"
            app:srcCompat="@drawable/ic_add"
            app:tint="@android:color/white"
            android:backgroundTint="#59b1aa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
