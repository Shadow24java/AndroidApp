<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#f1d9a2"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_card"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título del anime"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#3b2b20"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/imgCover"
            app:layout_constraintTop_toTopOf="@id/imgCover"
            app:layout_constraintEnd_toStartOf="@id/btnFavorito" />

        <TextView
            android:id="@+id/tvCategorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Categoría: -"
            android:textSize="14sp"
            android:textColor="#3b2b20"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintEnd_toStartOf="@id/btnFavorito" />

        <TextView
            android:id="@+id/tvValoracion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valoración: -"
            android:textSize="14sp"
            android:textColor="#3b2b20"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvCategorias"
            app:layout_constraintEnd_toStartOf="@id/btnFavorito" />

        <TextView
            android:id="@+id/tvAutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Autor: -"
            android:textSize="14sp"
            android:textColor="#3b2b20"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvValoracion"
            app:layout_constraintEnd_toStartOf="@id/btnFavorito" />

        <Button
            android:id="@+id/btnFavorito"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_orange"
            android:text="Favoritos"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/btnEliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgCover" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_orange"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imgCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFavorito" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
