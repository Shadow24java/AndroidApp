<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PanelBase">
        <item name="android:background">@drawable/bg_panel</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#e86e36</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonOrange">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonTurquoise">
        <item name="android:background">@drawable/bg_button_turquoise</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardTextTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3b2b20</item>
    </style>

    <style name="CardTextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3b2b20</item>
    </style>

</resources>